<html>

	<head>
		<title>Cargos</title>
	</head>
	<body>

		Cargo
		<form name="formListagem">
			<table border="1">
				<tr>
					<td>Código</td>
					<td>Descrição</td>
					<td>Ações</td>
				</tr>

				<% for cargo in @entidades%>
				<tr>
					<td>
					<input type="submit" value="<%= cargo.codigo%>" onclick="document.formListagem.action='/cargos/<%= cargo.codigo%>'"  />
					</td>
					<td><%= cargo.descricao%></td>
					<td>
					<input type="submit" value="Editar" onclick="document.formListagem.action='/cargos/editar/<%= cargo.codigo%>'"  />
					<input type="submit" value="Apagar" onclick="document.formListagem.action='/cargos/apagar/<%= cargo.codigo%>'"  />
					</td>
				</tr>
				<%end%>

			</table>

			<input type="submit" value="Novo" onclick="document.formListagem.action='/cargos/criar'"  />

		</form>
	
	</body>

</html>
